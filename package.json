{
    "name": "puzzle-host-server",
    "type": "module",
    "watch": {
        "build": {
            "patterns": [
                "src"
            ],
            "extensions": "js,ts"
        }
    },
    "scripts": {
        "prestart": "npm run build",
        "start": "concurrently --killOthers \"npm run watch\" \"npm run serve\"",
        "build": "npx tsc",
        "watch": "npm-watch",
        "serve": "nodemon ./dist/index.js",
        "test": "jest --watch",
        "package": "rollup --config rollup.config.js --configPlugin typescript",
        "child-start": "npm run package && node ./dist/index.js"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "<rootDir>/node_modules/",
            "<rootDir>/dist/"
        ],
        "coveragePathIgnorePatterns": [
            "<rootDir>/node_modules/",
            "<rootDir>/dist/"
        ],
        "moduleDirectories": [
            "node_modules"
        ],
        "setupFiles": [
            "./test/env.js"
        ]
    },
    "dependencies": {
        "@rollup/plugin-node-resolve": "^15.3.0",
        "@rollup/plugin-typescript": "^12.1.1",
        "@types/express": "^5.0.0",
        "@types/express-ws": "^3.0.5",
        "@types/node": "^20.14.2",
        "@types/pg": "^8.11.10",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-ws": "^5.0.2",
        "pg": "^8.13.0",
        "rollup": "^4.24.3",
        "tslib": "^2.8.0",
        "typescript": "^5.4.5"
    },
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@babel/preset-env": "^7.25.4",
        "@babel/preset-typescript": "^7.24.7",
        "babel-jest": "^29.7.0",
        "concurrently": "^9.0.1",
        "jest": "^29.7.0",
        "nodemon": "^3.1.3",
        "npm-watch": "^0.13.0",
        "supertest": "^7.0.0"
    }
}
